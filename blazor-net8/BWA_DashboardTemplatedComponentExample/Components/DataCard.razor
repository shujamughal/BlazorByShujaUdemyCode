

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Title</h5>
        <div class="card-text">
            @ChildContent
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
